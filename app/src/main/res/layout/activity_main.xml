<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.picasso.customview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bezier系列"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/second_bezier"
            android:onClick="secondOrder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/three_bezier"
            android:onClick="threeOrder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/clipboard"
            android:onClick="slip"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/clean_360"
            android:onClick="clean360"/>
    </LinearLayout>

</LinearLayout>
